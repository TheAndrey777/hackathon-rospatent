<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RospatentHackathon.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RospatentHackathon.Views"
    xmlns:views="clr-namespace:RospatentHackathon.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="PatentSearchPage">
            <ShellContent ContentTemplate="{DataTemplate views:PatentSearchPage}" />
        </Tab>
        <Tab Title="SimilarDocumentsPage">
            <ShellContent ContentTemplate="{DataTemplate views:SimilarDocumentsPage}" />
        </Tab>
        <Tab Title="GeneticSearchPage">
            <ShellContent ContentTemplate="{DataTemplate views:GeneticSearchPage}" />
        </Tab>
        <Tab Title="NonPatentLiteraturePage">
            <ShellContent ContentTemplate="{DataTemplate views:NonPatentLiteraturePage}" />
        </Tab>
        <Tab Title="ClassifiersPage">
            <ShellContent ContentTemplate="{DataTemplate views:ClassifiersPage}" />
        </Tab>
        <Tab Title="HSLPage">
            <ShellContent ContentTemplate="{DataTemplate views:HslColorPage}" />
        </Tab>
    </TabBar>
</Shell>
